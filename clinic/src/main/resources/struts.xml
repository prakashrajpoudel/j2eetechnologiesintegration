<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<!-- Not required, but trying to exclude these url to map with spring -->
	<constant name="struts.action.excludePattern" value="/j_spring_security_check" />
	<constant name="struts.action.excludePattern"
		value="/j_spring_security_check.*,.*\\.j_spring_security_check" />


	<package name="default" namespace="/" extends="struts-default">
<result-types>
  <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
</result-types>
		<action name="listClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="listClinic">
			<result name="success" type="tiles">/clinicList.tiles</result>
		</action>

		<action name="addClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="addClinic">
			<result name="success" type="tiles">/editClinic.tiles</result>
		</action>
		
		<action name="saveClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="saveClinic">
			<result name="success" type="redirect">listClinic</result>
		</action>
		
		
		<!--  User Controllers -->
		<action name="listUser" class="np.com.userconfig.controller.UserController"
			method="listUser">
			<result name="success" type="tiles">/userList.tiles</result>
		</action>

		<action name="addUser" class="np.com.userconfig.controller.UserController"
			method="addUser">
			<result name="success" type="tiles">/editUser.tiles</result>
		</action>
		
		<action name="saveUser" class="np.com.userconfig.controller.UserController"
			method="saveUser">
			<result name="success" type="redirect">listUser</result>
		</action>
		
		<!-- Login Controller -->
		<action name="login" class="np.com.authentication.controller.LoginController"
			method="login">
			<result name="success" type="tiles">/login.tiles</result>
		</action>
		
		<action name="loginFailed" class="np.com.authentication.controller.LoginController"
			method="loginFailed">
			<result name="success" type="tiles">/login.tiles</result>
		</action>
	</package>

</struts>