<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<!-- Not required, but trying to exclude these url to map with spring -->
	<constant name="struts.action.excludePattern" value="/j_spring_security_check" />
	<constant name="struts.action.excludePattern"
		value="/j_spring_security_check.*,.*\\.j_spring_security_check" />



	<package name="default" namespace="/" extends="struts-default">

		<action name="listClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="listClinic">
			<result name="success">/WEB-INF/pages/clinicList.jsp</result>
		</action>

		<action name="addClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="addClinic">
			<result name="success">/WEB-INF/pages/editClinic.jsp</result>
		</action>
				<action name="saveClinic" class="np.com.clinic.presentation.ClinicCRUDAction"
			method="saveClinic">
			<result name="success" type="redirect">listClinic</result>
		</action>
	</package>

</struts>